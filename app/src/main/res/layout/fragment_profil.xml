<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context=".UI.Game.ProfileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/boutonRetour"
            android:layout_width="52dp"
            android:layout_height="44dp"
            android:layout_gravity="start"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/back" />
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Changer de pseudo :"/>

        <EditText
            android:id="@+id/nouveauPseudo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:inputType="text"
            android:minHeight="48dp"
            android:text="nshivre" />

        <Button
            android:id="@+id/boutonConfirmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmer"
            android:layout_marginTop="25dp"
            />

        <Button
            android:id="@+id/boutonReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RÃ©initialiser profile"
            android:layout_marginTop="25dp"
            />

    </LinearLayout>

</ScrollView>